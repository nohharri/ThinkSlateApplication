<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="1"
    android:id="@+id/coupon_item">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/bb_bottom_bar_top_shadow"
        android:id="@+id/couponImage"
        android:layout_weight="0.00" />

    <TextView
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:id="@+id/couponDescription"
        android:textSize="18sp"
        android:layout_weight="2.31"
        android:layout_alignParentTop="true"
        android:layout_width="100dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/couponImage"
        android:layout_height="40dp" />

    <Button
        android:text="Use!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/useBtn"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/couponImage"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"/>

</RelativeLayout>
